<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".PropertyCategory">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:text="Property Category :"
        android:textColor="@color/colorAccent"
        android:textSize="30sp">

    </TextView>

    <Button

        android:id="@+id/apartmentAndFlatsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartment and Flats">

    </Button>

    <Button

        android:id="@+id/housesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Houses">

    </Button>

    <Button
        android:id="@+id/plotsAndLandId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="plots and Land">

    </Button>

    <Button
        android:id="@+id/commercialPropertyId"
        android:text="Commercial Property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </Button>

    <Button

        android:id="@+id/roomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:textColor="@color/colorAccent">

    </Button>

    <Button
        android:id="@+id/garagesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="garages">

    </Button>




</LinearLayout>